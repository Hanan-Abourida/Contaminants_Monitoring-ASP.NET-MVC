@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/aos.css" rel="stylesheet" />
<script src="~/Scripts/aos.js"></script>
<style>
    .card {
        border-width: 0;
        color:grey;
    }
    .card-body.card-Number {
        text-align: center;
        display: inline-block;
    }
        .card-body.card-Number p {
            border: 1px solid;
            border-radius: 50%;
            padding: 0.6em;
            width: 3em !important;
        }
        .card-body.card-Number p:hover {
            opacity: 0.7;
        }
</style>
<div class="jumbotron" style="margin: 2em;">

    <div style="text-align:center;" >
        <div class="card border-success" style="width:30%; display:inline-block;margin:3px" data-aos="fade-down" data-aos-duration="2000">
            <div class="card-title" style="padding-top: 1em;">Collected Samples</div>
            <div class="card-body card-Number"><p style="border-color: green;color:white; background-color:seagreen;">502</p></div>
        </div>

        <div class="card border-warning" style="width:30%; display:inline-block;margin:3px" data-aos="fade-down" data-aos-duration="2000">
            <div class="card-title" style="padding-top: 1em;">Analyzed Samples</div>
            <div class="card-body card-Number"><p style="        border-color: #ff9;
        color: white;
        background-color: #fff080;">150</p></div>
        </div>
        <br> 
        <div class="card border-danger" style="width:30%; display:inline-block;margin:3px" data-aos="fade-up" data-aos-duration="2000">
            <div class="card-title" style="padding-top: 1em;">Contaminants Tested</div>
            <div class="card-body card-Number"><p style="        border-color: orangered;
        color: white;
        background-color: #ff6242;">2</p></div>
        </div>

        <div class="card border-primary" style="width:30%; display:inline-block;margin:3px" data-aos="fade-up" data-aos-duration="2000">
            <div class="card-title" style="padding-top: 1em;">Commodities Tested</div>
            <div class="card-body card-Number"><p style="        border-color: cornflowerblue;
        color: white;
        background-color: cornflowerblue;">2</p></div>
        </div>
    </div>
</div>
<script>
    AOS.init();
</script>