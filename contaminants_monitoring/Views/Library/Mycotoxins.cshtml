@model IEnumerable<Contaminants_Monitoring.ViewModels.MLViewModel>

@{
    ViewBag.Title = "Mycotoxins";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<link href="~/Content/DataTables/css/jquery.dataTables.css" rel="stylesheet" />
<style>
    .dataTables_length, .dataTables_filter {
        font-size: 13px !important;
    }
    table.dataTable thead th, table.dataTable thead td{
        border-bottom: none !important;
    }
</style>
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="#" target="_self">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page">Library</li>
        <li class="breadcrumb-item active" aria-current="page">Contaminants</li>
        <li class="breadcrumb-item active" aria-current="page">Mycotoxins ML</li>
    </ol>
</nav>
<h3 style="padding-top: 20px; color: dimgray;">List of Mycotoxins ML</h3>

<hr />

@*<p>
        @Html.ActionLink("Create New", "Create")
    </p>*@
<table class="table table-hover table-condensed table-responsive" id="MLsTableId" style="display:table">
    <thead style="background-color: #346cb0 !important;color: white;">
        <tr>
            <th>
                @Html.DisplayName("Mycotoxin")
            </th>
            <th>
                @Html.DisplayName("Commodity")
            </th>
            <th>
                @Html.DisplayName("ML")
            </th>
            <th>
                @Html.DisplayName("Unit")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink(item.mycotoxinML.Mycotoxin.MycotoxinName, "OpenMycotoxinPage", "Library", new { Id = item.mycotoxinML.fkMycotoxinId }, null /* html attributes */)
                    @*@Html.DisplayFor(modelItem => item.mycotoxinML.Mycotoxin.MycotoxinName)*@
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.mycotoxinML.Commodity.CommodityName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.mycotoxinML.ML)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.uom)
                </td>
                <td>
                    @*@Html.ActionLink("Edit", "Edit", new { id = item.pkMycotoxinMLId }) |
                        @Html.ActionLink("Details", "Details", new { id = item.pkMycotoxinMLId }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.pkMycotoxinMLId })*@
                </td>
            </tr>
        }
    </tbody>

</table>
<script>
    $(document).ready(function () {
        $("#MLsTableId").DataTable(
            {
                "ordering": false,
            }
        );
    });
</script>